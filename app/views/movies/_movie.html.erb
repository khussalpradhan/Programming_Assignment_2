<div id="<%= dom_id movie %>" class="movie-details">
  <p>
    <strong>Rating:</strong>
    <%= movie.rating %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= movie.description %>
  </p>

  <p>
    <strong>Release date:</strong>
    <%= movie.release_date&.strftime("%B %d, %Y") %>
  </p>
</div>
